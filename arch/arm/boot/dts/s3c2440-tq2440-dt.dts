/dts-v1/;
#include "s3c2440.dtsi"
#include <dt-bindings/interrupt-controller/irq.h>
#include <dt-bindings/gpio/gpio.h>

/ {
	model = "TQ2440";
	compatible = "samsung,s3c2440", "samsung,tq2440";

	aliases {
		i2c1 = &i2c_gpio_1;
	};

	memory {
		reg =  <0x30000000 0x34000000>;
	};

	chosen {
		bootargs = "noinitrd root=/dev/mtdblock5 rw rootfstype=jffs2  console=ttySAC0,115200n8 init=/linuxrc ignore_loglevel earlyprintk";
	};

	srom-cs4@20000000 {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <1>;
		reg = <0x20000000 0x8000000>;
		ranges;

		ethernet@20000000 {
			compatible = "davicom,dm9000";
			reg = <0x20000000 0x2 0x20000004 0x2>;
			interrupt-parent = <&gpf>;
			interrupts = <7 IRQ_TYPE_EDGE_RISING>;
			local-mac-address = [00 00 de ad be ef];
			davicom,no-eeprom;
		};
	};

	i2c_gpio_1: i2c-gpio-1 {
		compatible = "i2c-gpio";
		#address-cells = <1>;
		#size-cells = <0>;
		gpios = <&gpe 15 GPIO_ACTIVE_HIGH>,  // SDA
			<&gpe 14 GPIO_ACTIVE_HIGH>;  // SCL
		i2c-gpio,delay-us = <5>; // 100KHz
		status = "disabled";

		eeprom@50 {
			compatible = "24c02";
			reg = <0x50>;
			pagesize = <32>;
			status = "okay";
		};
	};
};

&watchdog {
	status = "okay";
};

&rtc {
	status = "okay";
};

&uart0 {
	status = "okay";
};

&i2c {
	status = "okay";
	samsung,i2c-max-bus-freq = <200000>;

	eeprom@50 {
		compatible = "24c02";
		reg = <0x50>;
		pagesize = <32>;
		status = "okay";
	};
};

&nand0 {
	status = "okay";
	nand,tacls = <0xa>;
	nand,twrph0 = <0x19>;
	nand,twrph1 = <0xa>;

	#address-cells = <1>;
	#size-cells = <1>;

	tq2440-0 {
		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			mtd0@0 {
				label = "SPL";
				reg = <0x0000000 0x100000>;
				read-only;
			};

			mtd1@100000 {
				label = "U-BOOT";
				reg = <0x0100000 0x100000>;
				read-only;
			};

			mtd2@200000 {
				label = "PARAMS";
				reg = <0x0200000 0x100000>;
				read-only;
			};

			mtd3@300000 {
				label = "KERNEL";
				reg = <0x300000 0x500000>;
				read-only;
			};

			mtd4@600000 {
				label = "DTB";
				reg = <0x800000 0x100000>;
				read-only;
			};

			mtd5@700000 {
				label = "ROOTFS";
				reg = <0x900000 0x0>;
			};
		};
	};
};

&usb_ohci {
	status = "okay";
};
